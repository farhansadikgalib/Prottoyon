<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableRight="@drawable/ic_cross"
        android:text="প্রত্যাখানের বিস্তারিত বিবরণ"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/bengali"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="#EBECE9"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="প্রত্যাখ্যানকারীঃ"
            android:textSize="18dp"
            android:fontFamily="@font/bengali"/>
        <TextView
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" অরবিন্দু পাদু "
            android:textStyle="bold"
            android:textSize="18dp"
            android:fontFamily="@font/bengali"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="প্রত্যাখ্যানের কারণঃ"
            android:textSize="18dp"
            android:fontFamily="@font/bengali"/>
        <TextView
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" No Need "
            android:textStyle="bold"
            android:textSize="18dp"
            android:fontFamily="@font/bengali"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="প্রত্যাখ্যানের তারিখঃ"
            android:textSize="18dp"
            android:fontFamily="@font/bengali"/>
        <TextView
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ২৬-০২-১৯  "
            android:textStyle="bold"
            android:textSize="18dp"
            android:fontFamily="@font/bengali"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ইং "
            android:textSize="18dp"
            android:fontFamily="@font/bengali"/>



    </LinearLayout>





    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="প্রত্যাখানের কারণঃ"
        android:textColor="#FF0000"
        />



    <androidx.cardview.widget.CardView
        android:layout_width="366dp"
        android:layout_height="180dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#FF0000">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="আবেদনকারীর ভুল ঠিকানা ব্যবহার করেছেন"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:textColor="#000000"
            android:textSize="18dp"
            />

    </androidx.cardview.widget.CardView>



    <Button
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="@drawable/button_background"
        android:layout_margin="20dp"
        android:onClick="submitx"
        android:layout_gravity="center"
        android:fontFamily="@font/bengali"
        android:text="সাবমিট"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />





</LinearLayout>