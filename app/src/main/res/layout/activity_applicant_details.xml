<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ApplicantDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8CC63F">

        <ImageView
            android:id="@+id/backButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/bengali"
                android:gravity="center"
                android:text="আবেদনের বিস্তারিত"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8CC63F"
        android:orientation="vertical" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/ic_launcher"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/applicant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/bengali"
                    android:text="আব্দুল হালিম"
                    android:textColor="#050505"
                    android:textSize="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/certificate_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bengali"
                    android:text="উত্তরাধিকার সনদ"
                    android:textColor="#067CAF"
                    android:textSize="16dp"
                    app:layout_constraintRight_toRightOf="@id/applicant_name"
                    app:layout_constraintTop_toBottomOf="@id/applicant_name" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="#FFFFFF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bengali"
                        android:text="আবেদনের বিস্তারিত"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <View
                        android:id="@+id/view1"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="1dp"
                        android:background="#ff9703"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/des" />


                    <TextView
                        android:id="@+id/serviceName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/bengali"
                        android:text="সেবার নামঃ  "
                        android:textSize="14dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view1" />


                    <TextView
                        android:id="@+id/cer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="2dp"
                        android:fontFamily="@font/bengali"
                        android:text="উত্তরাধিকার সনদ "
                        android:textColor="#000000"
                        android:textSize="14dp"
                        app:layout_constraintLeft_toRightOf="@id/serviceName"
                        app:layout_constraintRight_toRightOf="@id/serviceName"
                        app:layout_constraintStart_toEndOf="@+id/serviceName"
                        app:layout_constraintTop_toBottomOf="@id/view1" />


                    <TextView
                        android:id="@+id/medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/bengali"
                        android:text="[বাংলা]"
                        android:textColor="#A535B1"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@id/cer_name"
                        app:layout_constraintRight_toRightOf="@id/cer_name"
                        app:layout_constraintStart_toEndOf="@+id/cer_name"
                        app:layout_constraintTop_toBottomOf="@id/view1" />


                    <TextView
                        android:id="@+id/service2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/bengali"
                        android:text="সরবাহের মাধ্যম :"
                        android:textSize="14dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/serviceName" />


                    <TextView
                        android:id="@+id/cer_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/bengali"
                        android:text=" নিজে গিয়ে "
                        android:textColor="#000000"
                        android:textSize="14dp"
                        app:layout_constraintLeft_toRightOf="@id/service2"
                        app:layout_constraintRight_toRightOf="@id/service2"
                        app:layout_constraintStart_toEndOf="@+id/service2"
                        app:layout_constraintTop_toBottomOf="@id/cer_name" />


                    <TextView
                        android:id="@+id/general"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/bengali"
                        android:text="[সাধারণ]"
                        android:textColor="#A535B1"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@id/cer_name1"
                        app:layout_constraintRight_toRightOf="@id/cer_name1"
                        app:layout_constraintStart_toEndOf="@+id/cer_name1"
                        app:layout_constraintTop_toBottomOf="@id/medium" />


                    <TextView
                        android:id="@+id/service3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/bengali"
                        android:text="অবস্থা :"
                        android:textSize="14dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/service2" />


                    <TextView
                        android:id="@+id/cer_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/bengali"
                        android:text=" অনুুমোদিত  "
                        android:textColor="#000000"
                        android:textSize="14dp"
                        app:layout_constraintLeft_toRightOf="@id/service3"
                        app:layout_constraintRight_toRightOf="@id/service3"
                        app:layout_constraintStart_toEndOf="@+id/service3"
                        app:layout_constraintTop_toBottomOf="@id/cer_name1" />


                    <TextView
                        android:id="@+id/service4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/bengali"
                        android:text="সরবরাহের মাধ্যম :"
                        android:textSize="14dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/service3" />


                    <TextView
                        android:id="@+id/cer_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/bengali"
                        android:text=" নিজে গিয়ে "
                        android:textColor="#000000"
                        android:textSize="14dp"
                        app:layout_constraintLeft_toRightOf="@id/cer_name2"
                        app:layout_constraintRight_toRightOf="@id/cer_name2"
                        app:layout_constraintStart_toEndOf="@+id/service4"
                        app:layout_constraintTop_toBottomOf="@id/cer_name2" />


                    <TextView
                        android:id="@+id/genera3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/bengali"
                        android:text="[সাধারণ]"
                        android:textColor="#A535B1"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@id/cer_name2"
                        app:layout_constraintRight_toRightOf="@id/cer_name2"
                        app:layout_constraintStart_toEndOf="@+id/cer_name3"
                        app:layout_constraintTop_toBottomOf="@id/cer_name2" />


                    <TextView
                        android:id="@+id/service5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/bengali"
                        android:text="প্রদানের মাধ্যম :"
                        android:textSize="14dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/service4" />


                    <TextView
                        android:id="@+id/cer_name4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/bengali"
                        android:text=" নগদ পরিশোধ  "
                        android:textColor="#000000"
                        android:textSize="14dp"
                        app:layout_constraintLeft_toRightOf="@id/service5"
                        app:layout_constraintRight_toRightOf="@id/service5"
                        app:layout_constraintStart_toEndOf="@+id/service5"
                        app:layout_constraintTop_toBottomOf="@id/cer_name3" />


                    <TextView
                        android:id="@+id/service6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/bengali"
                        android:text="ফি-এর বিবরণ :"
                        android:textSize="14dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/service5" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:padding="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/service6">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="#8CC63F">


                            <TextView
                                android:id="@+id/charge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="@font/bengali"
                                android:paddingTop="15dp"
                                android:paddingBottom="5dp"
                                android:text="সার্টিফিকেট ফিঃ"
                                android:textColor="#ffffff"
                                android:textSize="14dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:id="@+id/bill"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:fontFamily="@font/bengali"
                                android:paddingTop="15dp"
                                android:paddingBottom="10dp"
                                android:text="০ টাকা "

                                android:textColor="#ffffff"
                                android:textSize="14dp"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:id="@+id/charge2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bengali"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="ভ্যাট ফিঃ "
                                android:textColor="#ffffff"
                                android:textSize="14dp"
                                app:layout_constraintStart_toStartOf="@+id/charge"
                                app:layout_constraintTop_toBottomOf="@+id/charge" />


                            <TextView
                                android:id="@+id/bill2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bengali"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="০.৫০ টাকা "
                                android:textColor="#ffffff"
                                android:textSize="14dp"
                                app:layout_constraintEnd_toEndOf="@+id/bill"
                                app:layout_constraintTop_toBottomOf="@+id/bill" />


                            <TextView
                                android:id="@+id/charge3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bengali"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="প্রত্যয়ন ফিঃ "
                                android:textColor="#ffffff"
                                android:textSize="14dp"
                                app:layout_constraintStart_toStartOf="@+id/charge2"
                                app:layout_constraintTop_toBottomOf="@+id/charge2" />


                            <TextView
                                android:id="@+id/bill3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bengali"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="২০ টাকা "
                                android:textColor="#ffffff"
                                android:textSize="14dp"
                                app:layout_constraintEnd_toEndOf="@+id/bill2"
                                app:layout_constraintTop_toBottomOf="@+id/bill2" />


                            <View
                                android:id="@+id/view2"
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginRight="20dp"
                                android:background="#FFFFF7"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/charge3" />


                            <TextView
                                android:id="@+id/charge4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bengali"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="মোট ফিঃ"
                                android:textColor="#ffffff"

                                android:textSize="16dp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="@+id/charge3"
                                app:layout_constraintTop_toBottomOf="@+id/charge3" />


                            <TextView
                                android:id="@+id/bill4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bengali"
                                android:paddingTop="5dp"
                                android:paddingBottom="15dp"
                                android:text="২০.৫০ টাকা"
                                android:textColor="#ffffff"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="@+id/bill3"
                                app:layout_constraintTop_toBottomOf="@+id/bill3" />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:id="@+id/button"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="15dp"
                        android:background="#860DB2"
                        android:fontFamily="@font/bengali"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:textColor="#ffffff"
                        app:layout_constraintEnd_toEndOf="@+id/cc"
                        app:layout_constraintStart_toStartOf="@+id/cc"
                        app:layout_constraintTop_toBottomOf="@+id/cc">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="লেনদেন সম্পূর্ণ করুন"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="15dp"
                        android:background="#860DB2"
                        android:fontFamily="@font/bengali"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:textColor="#ffffff"
                        app:layout_constraintEnd_toEndOf="@+id/button"
                        app:layout_constraintStart_toStartOf="@+id/button"
                        app:layout_constraintTop_toBottomOf="@+id/button">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/correct_sign" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="অনুমোদন"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/button_border"
                        android:fontFamily="@font/bengali"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:textColor="#ffffff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/button2"
                        app:layout_constraintTop_toBottomOf="@+id/button2">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/wrong_sign" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="প্রত্যাখ্যান "
                            android:textColor="#860DB2"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>


</LinearLayout>