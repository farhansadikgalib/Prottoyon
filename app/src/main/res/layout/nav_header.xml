<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff"
        >

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/drawer_bg"
          />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePicx"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="left"
                android:elevation="6dp"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="#ffff"
                app:civ_border_width="6dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:gravity="left"
                android:text="ফারহান সাদিক"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold"></TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/pod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bengali"
                    android:gravity="center"
                    android:text="পদঃ  "
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/podtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bengali"
                    android:gravity="center"
                    android:text="কাউন্সিলর"
                    android:textColor="#000" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                >


                <TextView
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bengali"
                    android:gravity="center"
                    android:text="মোবাইল নংঃ  "
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/contactNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bengali"
                    android:gravity="center"
                    android:text="01794937599"
                    android:textColor="#000"
                    />

            </LinearLayout>



        </LinearLayout>



    </RelativeLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"

       >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="left">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" সাম্প্রতিক আবেদন  "
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:onClick="recentApplication"
                android:fontFamily="@font/bengali"
                android:textColor="#FFFFFF"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="left">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="অনুমোদিত আবেদন"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"

                android:textSize="20dp"
                android:textStyle="bold"
                android:onClick="approvedApplication"
                android:fontFamily="@font/bengali"
                android:textColor="#FFFFFF"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="left">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/bengali"
                android:onClick="underConsiderationApplication"
                android:text="বিবেচনাধীন আবেদন"
                android:layout_marginBottom="20dp"

                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="left">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="অননুমোদিত আবেদন   "
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:onClick="UnApprovedApplication"
                android:fontFamily="@font/bengali"
                android:textColor="#FFFFFF"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="left">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="পুনরায় জমা আবেদন   "
                android:textSize="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:onClick="reAppliedApplication"
                android:fontFamily="@font/bengali"
                android:textColor="#FFFFFF"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="left">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="সময় শেষ   "
                android:textSize="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:onClick="timeOver"
                android:fontFamily="@font/bengali"
                android:textColor="#FFFFFF"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="left">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="লগ আউট   "
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:onClick="logout"
                android:fontFamily="@font/bengali"
                android:textColor="#FFFFFF"
                />





        </LinearLayout>


    </LinearLayout>



</LinearLayout>




















