<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApplicantsDescriptionFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android" >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ECECEC"
            tools:context=".ApplicantsDescription">


            <androidx.cardview.widget.CardView
                android:id="@+id/imageCard"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="5dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#555555"/>

            <TextView
                android:id="@+id/nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="আব্দুল হালিম"
                android:textColor="#DD0F0F0F"

                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                app:layout_constraintRight_toRightOf="parent"/>


            <TextView
                android:id="@+id/mobileNumberTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="০১৭১২৩৪৫৬৭৮"
                android:textColor="#DD0F0F0F"

                app:layout_constraintTop_toBottomOf="@id/nameTV"
                android:textSize="20sp"

                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/idOfApplicants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NID: 199000000555555555555"
                android:textColor="#DD0F0F0F"

                app:layout_constraintTop_toBottomOf="@id/mobileNumberTV"
                android:textSize="15sp"

                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/nationalIDCardImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="জাতীয় পরিচয় পত্রের ছবি"
                android:textColor="#067CAF"

                app:layout_constraintTop_toBottomOf="@id/idOfApplicants"
                android:textSize="15sp"
                android:layout_marginTop="5dp"

                android:layout_marginRight="20dp"
                app:layout_constraintRight_toRightOf="parent"/>




            <androidx.cardview.widget.CardView
                android:id="@+id/personalCL"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:layout_constraintTop_toBottomOf="@id/imageCard"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="2dp">

                <androidx.constraintlayout.widget.ConstraintLayout

                    android:layout_width="match_parent"
                    android:layout_height="500dp">


                    <TextView
                        android:id="@+id/personalTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ব্যক্তিগত তথ্যাদি"
                        android:textSize="25sp"
                        android:textStyle="normal"
                        android:textColor="#020202"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"/>
                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#443D3D"
                        android:orientation="horizontal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/personalTV"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:id="@+id/applicantsNameTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/view"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="নামঃ আকমল মিয়া"
                        android:textColor="#222020"
                        android:textSize="22sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:id="@+id/fatherTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/applicantsNameTV"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="নামঃ আকমল মিয়া"
                        android:textColor="#222020"
                        android:textSize="22sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:id="@+id/mothersNameTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/fatherTV"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="নামঃ আকমল মিয়া"
                        android:textColor="#222020"
                        android:textSize="22sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:id="@+id/mobileNoTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/mothersNameTV"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="মোবাইল নম্বরঃ +৮৮ ০১৭৬০০০০১১১"
                        android:textColor="#222020"
                        android:textSize="22sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"/>



                    <TextView
                        android:id="@+id/emailTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/mobileNoTV"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="akmalMia@gmail.com"
                        android:textColor="#222020"
                        android:textSize="22sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:id="@+id/sexTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/emailTV"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="লিঙ্গঃ পুরুষ"
                        android:textColor="#222020"
                        android:textSize="22sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:id="@+id/birthDateTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/sexTV"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="১২ জানুয়ারী,১৯৯৪"
                        android:textColor="#222020"
                        android:textSize="22sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:id="@+id/bloodGroupTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/birthDateTV"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="বি পজেটিভ "
                        android:textColor="#222020"
                        android:textSize="22sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"/>








                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/currentAddress"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:layout_constraintTop_toBottomOf="@id/personalCL"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="2dp">


                <androidx.constraintlayout.widget.ConstraintLayout

                    android:layout_width="match_parent"
                    android:layout_height="500dp">


                    <TextView
                        android:id="@+id/personalInfoTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:text="বর্তমান ঠিকানা"
                        android:textColor="#020202"
                        android:textSize="25sp"
                        android:textStyle="normal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#443D3D"
                        android:orientation="horizontal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/personalInfoTV" />

                    <LinearLayout
                        android:id="@+id/divisionAndZilla"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:weightSum="5"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view2">

                        <TextView
                            android:id="@+id/divisionTitleTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="বিভাগঃ"
                            android:textColor="#222020"
                            android:textSize="22sp" />


                        <TextView
                            android:id="@+id/divisionTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="ঢাকা"
                            android:textColor="#222020"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/zillTitleTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="জেলাঃ"
                            android:textColor="#222020"
                            android:textSize="20sp" />


                        <TextView
                            android:id="@+id/zillaTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="ঢাকা"
                            android:textColor="#222020"
                            android:textSize="22sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/PostGroupAndCityCorp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:weightSum="5"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ThanaAndPost">

                        <TextView
                            android:id="@+id/postTitleGroup"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="ডাকঘর গ্রুপঃ"
                            android:textColor="#222020"
                            android:textSize="20sp" />


                        <TextView
                            android:id="@+id/postGroup"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ঢাকা"
                            android:textColor="#222020"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/cityCorpTitleTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="সিটি কর্পোঃ"
                            android:textColor="#222020"
                            android:textSize="22sp" />


                        <TextView
                            android:id="@+id/citycorpTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ঢাকা"
                            android:textColor="#222020"
                            android:textSize="22sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ThanaAndPost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:weightSum="5"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divisionAndZilla">

                        <TextView
                            android:id="@+id/thanaTitleTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="থানাঃ"
                            android:textColor="#222020"
                            android:textSize="22sp" />


                        <TextView
                            android:id="@+id/thanaTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="ঢাকা"
                            android:textColor="#222020"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/postTitleTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="ডাকঘরঃ"
                            android:textColor="#222020"
                            android:textSize="22sp" />


                        <TextView
                            android:id="@+id/postTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="ঢাকা"
                            android:textColor="#222020"
                            android:textSize="22sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/WordAndBlockLV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:weightSum="5"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/PostGroupAndCityCorp">

                        <TextView
                            android:id="@+id/wordTitleTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ওয়ার্ড নংঃ"
                            android:textColor="#222020"
                            android:textSize="22sp" />


                        <TextView
                            android:id="@+id/wordTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text=""
                            android:textColor="#222020"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/blockTitleTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="ব্লক/সেক্টরঃ"
                            android:textColor="#222020"
                            android:textSize="22sp" />


                        <TextView
                            android:id="@+id/blockTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text=""
                            android:textColor="#222020"
                            android:textSize="22sp" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/RoadAndHoldingLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:weightSum="5"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/WordAndBlockLV">

                        <TextView
                            android:id="@+id/RoadTitleTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="রোড নংঃ"
                            android:textColor="#222020"
                            android:textSize="22sp" />


                        <TextView
                            android:id="@+id/RoadTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text=""
                            android:textColor="#222020"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/holdingTItleTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="হোল্ডিং নংঃ"
                            android:textColor="#222020"
                            android:textSize="22sp" />


                        <TextView
                            android:id="@+id/holdingTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text=""
                            android:textColor="#222020"
                            android:textSize="22sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/villageAndOwnershipType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:weightSum="5"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/RoadAndHoldingLL">

                        <TextView
                            android:id="@+id/villageTitleTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="গ্রাম/বাড়িঃ"
                            android:textColor="#222020"
                            android:textSize="22sp" />


                        <TextView
                            android:id="@+id/villageTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text=""
                            android:textColor="#222020"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/ownershipTitleTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="মালিকানার ধরণঃ"
                            android:textColor="#222020"
                            android:textSize="22sp" />


                        <TextView
                            android:id="@+id/ownershipTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text=""
                            android:textColor="#222020"
                            android:textSize="22sp" />

                        <include layout="@layout/permanent_residence" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        app:layout_constraintTop_toBottomOf="@id/villageAndOwnershipType"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:orientation="vertical">

                    </LinearLayout>




















                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>








        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>